Aegis
=====


Example
=======

class Permissions < Aegis::Permissions

  role :moderator
  role :guest
  role :administrator, :default_permission => :allow
  
  permission :edit_user do
    allow :moderator
    deny :guest
    allow :moderator do |role_user, target_user|
      role_user == target_user.creator
    end
  end
  
  permission :edit_users do
    allow :moderator
  end

end


